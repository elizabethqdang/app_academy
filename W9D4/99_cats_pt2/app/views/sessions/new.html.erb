<h1>Sign in</h1>

<form action="<%= session_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label>User Name
        <input type="text" name="user[username]">
    </label>
    
    <label>Password
        <input type="password" name="user[password]">
    </label>
    
    <input type="submit">
</form>